<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/background_with_border_bottom"
    android:layout_height="wrap_content">


    <TextView
        android:visibility="gone"
        android:id="@+id/productPosition"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"

        />



            <View
                android:visibility="gone"
                android:id="@+id/ecommerceSiteColor"
                android:layout_width="16dp"
                android:layout_height="88dp"
                android:background="@color/merahBukalapak"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iconReorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_reorder_24dp"
                />



    <LinearLayout
        android:background="@color/white"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:layout_marginEnd="36dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88dp">

            <TextView
                android:ellipsize="end"
                android:id="@+id/productName"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product NAME"
                />

            <TextView
                android:id="@+id/productPrice"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price"
                />
    </LinearLayout>
    <ImageView
        android:background="@color/gray400"
        android:id="@+id/productImage"
        android:layout_alignParentRight="true"
        android:layout_width="88dp"
        android:layout_height="88dp" />










</RelativeLayout>